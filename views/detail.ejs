<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>详情页</title>
</head>
<body>
<div></div>
<script src="./jquery.js"></script>
<script>
    var id=location.search.split("=")[1];
    console.log(id);
    $.ajax({
        url:'/detailed',
        type:'get',
        data:{
            id:id
        },
        success:function(mg){
            if(mg.code==1){
                var str="";
                for(var i=0;i<mg.msg.length;i++){
                    str+='<p>'+mg.msg[i].content+'</p>'
                }
                $('div').html(str)
            }

        }
    })
</script>
</body>
</html>